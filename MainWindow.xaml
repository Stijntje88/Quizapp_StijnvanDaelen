<Window
    x:Class="Quizapp_StijnvanDaelen.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="QuizApp">

    <Grid Margin="20">
        <!-- STARTSCHERM -->
        <StackPanel x:Name="StartPanel" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welkom bij de QuizApp" FontSize="28" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center"/>

            <!-- Naam invoeren -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10" Spacing="10">
                <TextBlock Text="Voer je naam in:" VerticalAlignment="Center"/>
                <TextBox x:Name="NaamTextBox" Width="200"/>
            </StackPanel>

            <!-- E-mail invoeren -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20" Spacing="10">
                <TextBlock Text="Voer je e-mail in:" VerticalAlignment="Center"/>
                <TextBox x:Name="EmailTextBox" Width="200"/>
            </StackPanel>

            <!-- Knoppen -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                <Button Content="Start Quiz" Width="120" Height="50" Click="LeerlingButton_Click"/>
                <Button Content="Docent" Width="120" Height="50" Click="DocentButton_Click"/>
            </StackPanel>
        </StackPanel>


        <!-- LEERLING QUIZ PANEL -->
        <StackPanel x:Name="QuizPanel" Visibility="Collapsed">
            <TextBlock x:Name="QuestionTextBlock" FontSize="22" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,10"/>
            <TextBox x:Name="AnswerTextBox" PlaceholderText="Typ hier je antwoord..." Margin="0,0,0,10"/>
            <Button x:Name="ConfirmButton" Content="Bevestig" Click="ConfirmButton_Click" Width="120" Margin="0,0,0,10"/>
            <TextBlock x:Name="FeedbackTextBlock" FontSize="18" Margin="0,0,0,10"/>
            <ProgressBar x:Name="ProgressBar" Height="20" Margin="0,0,0,5"/>
            <TextBlock x:Name="ProgressTextBlock" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock x:Name="ScoreTextBlock" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
            <ListBox x:Name="IncorrectQuestionsListBox" Height="150"/>
            <Button Content="Back" Width="120" Height="50" Click="BackButton_Click"/>
        </StackPanel>

        <!-- DOCENT PANEL -->
        <StackPanel x:Name="DocentPanel" Visibility="Collapsed">
            <TextBlock Text="Docent Paneel" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- JSON Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" Spacing="10">
                <Button Content="Upload JSON" Click="UploadJsonButton_Click"/>
                <Button Content="Bekijk Resultaten" Click="BekijkResultatenButton_Click"/>
            </StackPanel>

            <!-- Handmatige vraag toevoegen -->
            <TextBlock Text="Nieuwe Vraag Toevoegen:" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox x:Name="VraagTextBox" PlaceholderText="Vraagtekst" Margin="0,0,0,5"/>
            <TextBox x:Name="CorrectAnswerTextBox" PlaceholderText="Correct Antwoord" Margin="0,0,0,5"/>
            <TextBox x:Name="WeightTextBox" PlaceholderText="Gewicht (bijv. 1)" Margin="0,0,0,5"/>
            <Button Content="Voeg Vraag Toe" Click="VoegVraagToeButton_Click"/>

            <!-- Resultaten -->
            <TextBlock Text="Resultaten:" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
            <ListBox x:Name="ResultatenListBox" Height="200"/>

            <Button Content="Back" Width="120" Height="50" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
