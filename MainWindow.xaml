<Window
    x:Class="Quizapp_StijnvanDaelen.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Quizapp">

    <StackPanel Padding="20" Spacing="10">

        <!-- Vraag -->
        <TextBlock x:Name="QuestionTextBlock" FontSize="20" TextWrapping="Wrap"/>

        <!-- Antwoord -->
        <TextBox x:Name="AnswerTextBox" PlaceholderText="Typ hier je antwoord..." FontSize="16"/>

        <!-- Confirmatie knop -->
        <Button x:Name="ConfirmButton" Content="Bevestig" Click="ConfirmButton_Click" Width="150" HorizontalAlignment="Left"/>

        <!-- Feedback -->
        <TextBlock x:Name="FeedbackTextBlock" FontSize="16" TextWrapping="Wrap"/>

        <!-- Voortgang -->
        <ProgressBar x:Name="ProgressBar" Height="20" Minimum="0" Maximum="100"/>
        <TextBlock x:Name="ProgressTextBlock" FontSize="14"/>

        <!-- Score aan het einde -->
        <TextBlock x:Name="ScoreTextBlock" FontSize="18" FontWeight="Bold" TextWrapping="Wrap"/>

    </StackPanel>
</Window>
